# ======================================================
# .dotfiles gitignore
# ======================================================
# ------------------------------------------------------
# Config
# ------------------------------------------------------
home/.config/*
!home/.config/ghostty/config

# ------------------------------------------------------
# Emacs
# ------------------------------------------------------
home/.emacs.d/*
!home/.emacs.d/early-init.el
!home/.emacs.d/init.el
!home/.emacs.d/init/*
!home/.emacs.d/twilight-theme.el

# ------------------------------------------------------
# Spack
# ------------------------------------------------------
home/.spack/*
!home/.spack/config.yaml
!home/.spack/repos.yaml
!home/.spack/environments/default/spack.yaml

# ------------------------------------------------------
# SSH
# ------------------------------------------------------
home/.ssh/*
