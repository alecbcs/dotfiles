[merge]
    tool = opendiff

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore-global
    sshCommand = ssh -F ~/.ssh/default

[alias]
    # remove branches whose remote tracking branch is gone
    bgone = !"f() { \
        gone_branches=$(git branch \
            --sort=-committerdate \
            --format '%(refname:short) %(upstream:track)' \
        | grep '\\[gone\\]' \
        | cut -d' ' -f 1); \
        for branch in $gone_branches; do \
            if [ \"$1\" = --dry-run ]; then \
                echo git branch -D $branch; \
            else \
                git branch -D $branch; \
            fi; \
        done; \
    }; f"

    # Go to the github/gitlab page for this repo
    go = "!f() {\
        url=$(git remote -v | grep '^origin\\|^github\\|^gitlab' | \
            sort -r | \
            egrep -o 'git..b.com[:/][^/ ]+/[^/ ]+' | head -1 | \
            perl -pe 's@(git..b\\.com).([^/ \\.]+)/([^/ \\.]+)(.git)?@https://\\1/\\2/\\3@' \
        ) && \
        python -c \"import webbrowser; webbrowser.open('${url}')\"; \
    }; f"

[difftool]
    prompt = false
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[rebase]
    autosquish = true

[push]
    default = simple

[fetch]
    prune = true

[pull]
    ff = only

[init]
    defaultBranch = main

[diff]
    tool = opendiff

[commit]
    gpgsign = true
